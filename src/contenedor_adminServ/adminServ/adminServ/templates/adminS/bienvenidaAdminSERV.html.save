{% extends 'adminS/baseAdminSERV.html' %}

{% load static %}
{% block titulo %}Bienvenida Admin SERV{% endblock %}

{% block estilos %}
<link rel="stylesheet" href="/static/css/adminS/bienvenidaAdmin.css">
{% endblock %}


{% block area %}
{% for monitor in monitor_servers %}
<div class="registro">
	<fieldset  class="col-xs-8" style="background-color:rgba(34,53,72,0.60); padding:15px;">
		<legend class="tituloRegistro">Servidor: 192.168.100.176</legend>
               	{% if errores %}
		<div class="alert alert-danger" id="errorA"> {{ errores }} </div>
                {% endif %}
		<p>PROCESADOR : {{ monitor.procesador }}</p>
		<p>MEMORIA: {{ monitor.memoria }}</p>
		<p>DISCO: {{ monitor.disco }}
	</fieldset>
</div>
{% endfor %}
<!--<div class="jumbotron" id="bienvenida">
	<header><h1><span id="titulo">Bienvenido Admin</span></h1></header>
</div>-->
{% endblock %}

{% block contenido %}
<nav class="navbar navbar-inverse navbar-fixed-bottom">
	<div class="container-fluid">
		<div class="navbar-header">
			<div class="btn-group dropup">
				<a type="button" class="btn btn-link navbar-brand" role="button" href="{% url 'bienvenida_adminA' %}">SSA</a>&nbsp;&nbsp;&nbsp;&nbsp;
				<button type="button" class="btn btn-primary btn-lg dropdown-toggle" id="btnNegro" data-toggle="dropdown" style="border-color:rgb(51,51,51);">
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu" style="background-color:rgba(255,255,255,0.0);">
					<li><button type="button" class="btn btn-primary btn-block" id="perfil">Editar perfil</btn></li>
					<li><a class="btn btn-danger btn-block" role="button" href="{% url 'logoutA' %}" id="salir">Salir</a></li>
				</ul>
			</div>
		</div>
	</div>

</nav>    
{% endblock %}

